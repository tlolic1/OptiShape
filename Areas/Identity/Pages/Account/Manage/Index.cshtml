@page
@model IndexModel
@{
    ViewData["Title"] = "Korisnički profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

@section Styles {
    <style>
        .profile-container {
            background-color: #ffffff;
            padding: 30px;
            margin: 30px auto;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        }

        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 1s ease-out forwards;
        }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-control {
            border-radius: 10px;
            padding: 14px;
            font-size: 1rem;
        }

        .btn-primary {
            background-color: #2563eb;
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-size: 1.1rem;
            box-shadow: 0 4px 10px rgba(37, 99, 235, 0.2);
            transition: transform 0.15s ease;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
                transform: translateY(-1px);
            }

        .form-label {
            font-weight: 600;
            color: #334155;
        }

        .section-title {
            color: #1e3a8a;
            font-size: 1.2rem;
            margin-bottom: 15px;
            border-bottom: 2px solid #e2e8f0;
            padding-bottom: 10px;
        }

        .input-icon {
            margin-right: 8px;
            color: #2563eb;
        }

        .read-only {
            background-color: #f1f5f9;
            cursor: not-allowed;
        }

        .editable {
            background-color: #ffffff;
            border: 1px solid #cbd5e1;
        }

        .editable-field {
            border-left: 3px solid #2563eb;
        }
    </style>
}

<div class="fade-in">
    <h2 class="text-center text-primary mb-4 fw-bold">👤 @ViewData["Title"]</h2>
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="profile-container">
        <form id="profile-form" method="post" class="p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <h4 class="section-title"><span class="input-icon">👤</span>Osnovni podaci</h4>
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control read-only" disabled />
                        <label asp-for="Username" class="form-label">📧 Email</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3 editable-field">
                        <input asp-for="Input.PhoneNumber" class="form-control editable" />
                        <label asp-for="Input.PhoneNumber" class="form-label">📱 Broj telefona</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Ime" class="form-control read-only" readonly />
                        <label asp-for="Input.Ime" class="form-label">Ime</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Prezime" class="form-control read-only" readonly />
                        <label asp-for="Input.Prezime" class="form-label">Prezime</label>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.DatumRodjenja" class="form-control read-only" type="date" readonly />
                        <label asp-for="Input.DatumRodjenja" class="form-label">📅 Datum rođenja</label>
                    </div>
                </div>
            </div>

            <h4 class="section-title"><span class="input-icon">💪</span>Fizički parametri</h4>
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Visina" class="form-control read-only" type="number" step="0.1" readonly />
                        <label asp-for="Input.Visina" class="form-label">📏 Visina (cm)</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3 editable-field">
                        <input asp-for="Input.Tezina" class="form-control editable" type="number" step="0.1" />
                        <label asp-for="Input.Tezina" class="form-label">⚖️ Težina (kg)</label>
                        <span asp-validation-for="Input.Tezina" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <h4 class="section-title"><span class="input-icon">🎯</span>Fitness ciljevi</h4>
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <select asp-for="Input.Spol" class="form-select form-control read-only" asp-items="Html.GetEnumSelectList<OptiShape.Models.Spol>()" disabled></select>
                        <label asp-for="Input.Spol" class="form-label">🧍 Spol</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3 editable-field">
                        <select asp-for="Input.Cilj" class="form-select form-control editable" asp-items="Html.GetEnumSelectList<OptiShape.Models.Cilj>()"></select>
                        <label asp-for="Input.Cilj" class="form-label">🎯 Cilj treninga</label>
                        <span asp-validation-for="Input.Cilj" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Input.StudentskiStatus" class="form-check-input" type="checkbox" disabled />
                        <label asp-for="Input.StudentskiStatus" class="form-check-label">🎓 Imam studentski status</label>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <button id="update-profile-button" type="submit" class="btn btn-primary">💾 Sačuvaj promjene</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}