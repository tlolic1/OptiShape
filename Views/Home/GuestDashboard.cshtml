@model IEnumerable<OptiShape.Controllers.TrenerViewModel>
@{
    ViewData["Title"] = "Prikaz za goste – OptiShape uvod";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1>OptiShape – Vaš prvi korak</h1>
    </div>

    <div class="welcome-card">
        <div class="welcome-icon">
            <i class="bi bi-info-circle-fill"></i>
        </div>
        <div class="welcome-content">
            <h3>Dobrodošli na gost pristup!</h3>
            <p>
                Kao gost, imate pristup osnovnom BMI kalkulatoru i kalkulatoru kalorijskog unosa.
                Za pristup naprednim funkcijama kao što su personalizirani planovi treninga, statistika napretka i personalni treneri,
                molimo vas da se <a href="/Identity/Account/Register" class="accent-link">registrujete</a> ili <a href="/Identity/Account/Login" class="accent-link">prijavite</a>.
            </p>
        </div>
    </div>

    <div class="card-grid">
        <div class="calculator-card">
            <div class="card-header-custom">
                <h3>Unesite vaše informacije</h3>
                <div class="icon-container">
                    <i class="bi bi-calculator"></i>
                </div>
            </div>
            <div class="card-content">
                <div class="form-group">
                    <label for="goal">Fitness cilj</label>
                    <div class="custom-select">
                        <select id="goal">
                            <option value="lose">Mršanje</option>
                            <option value="gain">Nabijanje mišićne mase</option>
                        </select>
                        <i class="bi bi-chevron-down"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="height">Visina (cm)</label>
                    <div class="input-with-icon">
                        <input type="number" id="height" min="100" max="250" placeholder="Unesite visinu">
                        <i class="bi bi-rulers"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="weight">Težina (kg)</label>
                    <div class="input-with-icon">
                        <input type="number" id="weight" min="30" max="300" placeholder="Unesite težinu">
                        <i class="bi bi-speedometer"></i>
                    </div>
                </div>
                <button type="button" class="primary-button" onclick="calculateResults()">
                    <span>Izračunaj</span>
                    <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>

        <div class="results-card">
            <div class="card-header-custom">
                <h3>Rezultati</h3>
                <div class="icon-container">
                    <i class="bi bi-graph-up"></i>
                </div>
            </div>
            <div class="card-content">
                <div class="result-section">
                    <h4>BMI (Indeks tjelesne mase):</h4>
                    <div id="bmi-result" class="result-display">Unesite visinu i težinu da vidite vaš BMI</div>
                    <div id="bmi-category" class="result-category"></div>
                </div>
                <div class="result-section">
                    <h4>Preporučeni dnevni unos kalorija:</h4>
                    <div id="calorie-result" class="result-display">Popunite formular da vidite preporučeni unos kalorija</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sekcija za trenere -->
    <div class="trainers-section">
        <div class="section-header">
            <i class="bi bi-person-check-fill"></i>
            <h2>Naši treneri</h2>
        </div>
        <div class="info-message">
            <i class="bi bi-info-circle-fill"></i>
            <p>Pogledajte naše kvalifikovane trenere. Registrujte se da biste dobili personalizirane planove treninga i ishrane.</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="trainers-grid">
                @foreach (var trener in Model)
                {
                    <div class="trainer-card">
                        <div class="trainer-avatar">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <div class="trainer-info">
                            <h3>@trener.Trener.Ime @trener.Trener.Prezime</h3>
                            <div class="trainer-details">
                                <div class="detail-item">
                                    <span style="font-size: 1.2rem;">📧</span>
                                    <span>@trener.Trener.Email</span>
                                </div>
                                <div class="detail-item">
                                    <span style="font-size: 1.2rem;">📞</span>
                                    <span>@trener.Trener.BrojTelefona</span>
                                </div>
                                <div class="detail-item">
                                    <span style="font-size: 1.2rem;">🏋️</span>
                                    <span>@trener.BrojKorisnika korisnik/a</span>
                                </div>
                            </div>
                            <a href="/Identity/Account/Register" class="trainer-button">
                                <i class="bi bi-person-plus"></i>
                                <span>Registruj se i odaberi trenera</span>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-trainers">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <p>Trenutno nema dostupnih trenera.</p>
            </div>
        }
    </div>

    <div class="benefits-section">
        <div class="benefits-card">
            <div class="card-header-custom">
                <h3>Zašto se registrovati?</h3>
                <div class="icon-container">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
            <div class="card-content">
                <h4>Prednosti registrovanih korisnika:</h4>
                <ul class="benefits-list">
                    <li class="benefit-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Personalizirani planovi treninga prilagođeni vašim ciljevima</span>
                    </li>
                    <li class="benefit-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Stručna podrška profesionalnih trenera</span>
                    </li>
                    <li class="benefit-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Praćenje napretka kroz vrijeme</span>
                    </li>
                    <li class="benefit-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Detaljni planovi ishrane bazirani na vašim potrebama</span>
                    </li>
                    <li class="benefit-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Studentske pogodnosti i popusti</span>
                    </li>
                </ul>
                <div class="action-buttons">
                    <a href="/Identity/Account/Register" class="register-button">
                        <i class="bi bi-person-plus"></i>
                        <span>Registruj se</span>
                    </a>
                    <a href="/Identity/Account/Login" class="login-button">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Prijavi se</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
