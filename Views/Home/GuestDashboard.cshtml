        display: flex;
        background-color: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        padding: 1.5rem;
        margin-bottom: 2.5rem;
        overflow: hidden;
        position: relative;
    }

    .welcome-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
        background: var(--gradient);
        border-radius: 50%;
        margin-right: 1.5rem;
        flex-shrink: 0;
    }

        .welcome-icon i {
            font-size: 1.8rem;
            color: white;
        }

    .welcome-content {
        flex: 1;
    }

        .welcome-content h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--primary-dark);
        }

        .welcome-content p {
            margin-bottom: 0;
            color: var(--gray-color);
        }

    .accent-link {
        color: var(--primary-color);
        font-weight: 600;
        text-decoration: none;
        position: relative;
        transition: var(--transition);
    }

        .accent-link::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background-color: var(--primary-color);
            transition: var(--transition);
        }

        .accent-link:hover {
            color: var(--primary-dark);
        }

            .accent-link:hover::after {
                width: 100%;
            }

    /* Card Grid */
    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 2.5rem;
    }

    /* Card Styles */
    .calculator-card,
    .results-card,
    .benefits-card {
        background-color: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
    }

    .card-header-custom {
        background: var(--gradient);
        color: white;
        padding: 1.25rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .card-header-custom h3 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
            color: white;
        }

    .icon-container {
        width: 40px;
        height: 40px;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .icon-container i {
            font-size: 1.25rem;
        }

    .card-content {
        padding: 1.5rem;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--dark-color);
        }

    .custom-select {
        position: relative;
    }

        .custom-select select {
            appearance: none;
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e0e0e0;
            border-radius: var(--border-radius);
            background-color: #fff;
            font-size: 1rem;
            transition: var(--transition);
            cursor: pointer;
        }

        .custom-select i {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            color: var(--gray-color);
        }

    .input-with-icon {
        position: relative;
    }

        .input-with-icon input {
            width: 100%;
            padding: 0.75rem 1rem;
            padding-right: 2.5rem;
            border: 1px solid #e0e0e0;
            border-radius: var(--border-radius);
            font-size: 1rem;
            transition: var(--transition);
        }

        .input-with-icon i {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-color);
        }

        .custom-select select:focus,
        .input-with-icon input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
        }

    /* Button Styles */
    .primary-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding: 0.75rem 1.5rem;
        background: var(--gradient);
        color: white;
        border: none;
        border-radius: var(--border-radius);
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .primary-button span {
            position: relative;
            z-index: 1;
            margin-right: 0.5rem;
        }

        .primary-button i {
            position: relative;
            z-index: 1;
        }

        .primary-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--primary-dark);
            opacity: 0;
            transition: var(--transition);
        }

        .primary-button:hover::before {
            opacity: 1;
        }

    /* Results Styles - Simplified */
    .result-section {
        margin-bottom: 1.5rem;
    }

        .result-section:last-child {
            margin-bottom: 0;
        }

        .result-section h4 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            color: var(--dark-color);
        }

    .result-display {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: var(--border-radius);
        font-weight: 500;
        margin-bottom: 0.75rem;
    }

    .result-category {
        font-weight: 600;
        margin-bottom: 0.75rem;
    }

    /* Trainers Section */
    .trainers-section {
        margin-bottom: 2.5rem;
    }

    .section-header {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
    }

        .section-header i {
            font-size: 1.75rem;
            color: var(--success-color);
            margin-right: 0.75rem;
        }

        .section-header h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark-color);
            margin: 0;
        }

    .info-message {
        display: flex;
        align-items: flex-start;
        padding: 1rem;
        background-color: rgba(76, 201, 240, 0.1);
        border-left: 4px solid var(--success-color);
        border-radius: 4px;
        margin-bottom: 1.5rem;
    }

        .info-message i {
            font-size: 1.25rem;
            color: var(--success-color);
            margin-right: 0.75rem;
            margin-top: 0.25rem;
        }

        .info-message p {
            margin: 0;
            color: var(--dark-color);
        }

    .trainers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .trainer-card {
        background-color: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .trainer-avatar {
        background: var(--gradient);
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .trainer-avatar i {
            font-size: 3rem;
            color: white;
        }

    .trainer-info {
        padding: 1.5rem;
    }

        .trainer-info h3 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--dark-color);
        }

    .trainer-details {
        margin-bottom: 1.25rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
    }

        .detail-item i {
            font-size: 1rem;
            color: var(--primary-color);
            margin-right: 0.5rem;
            width: 20px;
            text-align: center;
        }

        .detail-item span {
