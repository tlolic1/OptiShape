            color: var(--gray-color);
        }

    .trainer-button {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1rem;
        background-color: transparent;
        color: var(--success-color);
        border: 1px solid var(--success-color);
        border-radius: var(--border-radius);
        font-size: 0.9rem;
        font-weight: 600;
        text-decoration: none;
        transition: var(--transition);
    }

        .trainer-button i {
            margin-right: 0.5rem;
        }

        .trainer-button:hover {
            background-color: var(--success-color);
            color: white;
        }

    .no-trainers {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        background-color: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
    }

        .no-trainers i {
            font-size: 1.5rem;
            color: var(--warning-color);
            margin-right: 1rem;
        }

        .no-trainers p {
            margin: 0;
            font-weight: 500;
        }

    /* Benefits Section */
    .benefits-list {
        list-style: none;
        padding: 0;
        margin: 0 0 1.5rem 0;
    }

    .benefit-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

        .benefit-item i {
            color: var(--primary-color);
            margin-right: 0.75rem;
            margin-top: 0.25rem;
        }

    .action-buttons {
        display: flex;
        gap: 1rem;
    }

    .register-button,
    .login-button {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        border-radius: var(--border-radius);
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: var(--transition);
        flex: 1;
    }

    .register-button {
        background: var(--gradient);
        color: white;
    }

    .login-button {
        background-color: transparent;
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
    }

    .register-button:hover {
        background: var(--primary-dark);
    }

    .login-button:hover {
        background-color: var(--primary-color);
        color: white;
    }

    .register-button i,
    .login-button i {
        margin-right: 0.5rem;
    }

  
    .welcome-card {
        flex-direction: column;
    }

    .welcome-icon {
        margin-right: 0;
        margin-bottom: 1rem;
    }

    .action-buttons {
        flex-direction: column;
    }

    }
</style>

@section Scripts {
    <script>
        function calculateResults() {
            const height = parseFloat(document.getElementById('height').value);
            const weight = parseFloat(document.getElementById('weight').value);
            const goal = document.getElementById('goal').value;

            if (isNaN(height) || isNaN(weight)) {
                alert('Unesite ispravne vrijednosti za visinu i težinu.');
                return;
            }

            // Calculate BMI
            const heightInMeters = height / 100;
            const bmi = weight / (heightInMeters * heightInMeters);
            const bmiFormatted = bmi.toFixed(1);

            // Set BMI result without animation
            const bmiResult = document.getElementById('bmi-result');
            bmiResult.textContent = `Vaš BMI: ${bmiFormatted}`;
            bmiResult.style.backgroundColor = '#e8f4fd';
            bmiResult.style.borderLeft = '4px solid var(--primary-color)';

            // Set BMI category
            const bmiCategory = document.getElementById('bmi-category');
            let category = '';
            let categoryClass = '';

            if (bmi < 18.5) {
                category = 'Pothranjenost';
                categoryClass = 'text-info';
            } else if (bmi >= 18.5 && bmi < 25) {
                category = 'Normalna težina';
                categoryClass = 'text-success';
            } else if (bmi >= 25 && bmi < 30) {
                category = 'Prekomjerna težina';
                categoryClass = 'text-warning';
            } else {
                category = 'Gojaznost';
                categoryClass = 'text-danger';
            }

            bmiCategory.innerHTML = `<span class="${categoryClass}">Kategorija: ${category}</span>`;

            // Calculate basic caloric needs (using a simplified formula)
            const baseCalories = 10 * weight + 6.25 * height - 5 * 30 + 5; // Assuming age 30, male

            // Adjust based on goal
            let adjustedCalories = baseCalories;
            if (goal === 'lose') {
                adjustedCalories = baseCalories - 500; // Deficit for weight loss
            } else if (goal === 'gain') {
                adjustedCalories = baseCalories + 500; // Surplus for weight gain
            }

            // Set calorie result without animation
            const calorieResult = document.getElementById('calorie-result');
            calorieResult.textContent = `Preporučeni dnevni unos kalorija: ${Math.round(adjustedCalories)} kcal`;
            calorieResult.style.backgroundColor = '#e8f4fd';
            calorieResult.style.borderLeft = '4px solid var(--primary-color)';
        }
    </script>
}