@model OptiShape.Models.PlanIshraneTreninga

@{
    ViewData["Title"] = "Uredi plan";
}

@section Styles {
    <style>
        body {
            background-color: #f8fafc;
        }

        .form-container {
            background-color: #ffffff;
            padding: 30px;
            margin: 40px auto;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            max-width: 600px;
        }

        h2 {
            color: #1e3a8a;
            font-weight: 700;
            margin-bottom: 25px;
        }

        label {
            font-weight: 600;
            margin-bottom: 5px;
            color: #334155;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #cbd5e1;
            padding: 10px;
            font-size: 1rem;
            margin-bottom: 15px;
        }

        .text-danger {
            font-size: 0.9rem;
            color: #dc2626;
        }

        .btn-primary {
            background-color: #2563eb;
            border: none;
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-back {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: #2563eb;
            font-weight: 600;
        }

            .btn-back:hover {
                color: #1d4ed8;
                text-decoration: underline;
            }
    </style>
}

<div class="form-container">
    <h2><i class="bi bi-pencil-square me-2"></i> Uredi plan ishrane i treninga</h2>

    <h5 style="color: #1e3a8a; margin-bottom: 25px;">
        Plan korisnika: <strong>@Model.Korisnik?.Ime @Model.Korisnik?.Prezime</strong>
    </h5>

    <form asp-action="Edit">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdPlana" />

        <div class="form-group">
            <label asp-for="DatumKreiranja">Datum kreiranja</label>
            <input asp-for="DatumKreiranja" class="form-control" />
            <span asp-validation-for="DatumKreiranja" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Kalorije">Kalorije</label>
            <input asp-for="Kalorije" class="form-control" />
            <span asp-validation-for="Kalorije" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Protein">Proteini (g)</label>
            <input asp-for="Protein" class="form-control" />
            <span asp-validation-for="Protein" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ugljikohidrati">Ugljikohidrati (g)</label>
            <input asp-for="Ugljikohidrati" class="form-control" />
            <span asp-validation-for="Ugljikohidrati" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Masti">Masti (g)</label>
            <input asp-for="Masti" class="form-control" />
            <span asp-validation-for="Masti" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="IdKorisnika" />

        <button type="submit" class="btn btn-primary">Sačuvaj izmjene</button>
    </form>

    <a asp-action="Index" class="btn-back">⟵ Nazad na listu</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
