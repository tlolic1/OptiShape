@model IEnumerable<OptiShape.Models.Placanje>

@{
    ViewData["Title"] = "Plaćanje";
}

@section Styles {
    <style>
        .card-custom {
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            background-color: #ffffff;
            padding: 30px;
            margin: 20px auto;
            width: 95%;
            overflow-x: auto;
        }

        .table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            overflow: hidden;
            table-layout: fixed; /* This helps create uniform columns */
        }

            .table th {
                background-color: #e0f2fe;
                color: #1e3a8a;
                font-weight: 700;
                padding: 12px 10px;
                text-align: left;
                font-size: 0.9rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .table td {
                background-color: #f9fafb;
                padding: 10px;
                border-top: 1px solid #e2e8f0;
                vertical-align: middle;
                font-size: 0.9rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

                /* Column width settings */
                .table th:nth-child(1), .table td:nth-child(1) {
                    width: 22%;
                }
                /* Korisnik */
                .table th:nth-child(2), .table td:nth-child(2) {
                    width: 15%;
                }
                /* Datum */
                .table th:nth-child(3), .table td:nth-child(3) {
                    width: 12%;
                }
                /* Iznos */
                .table th:nth-child(4), .table td:nth-child(4) {
                    width: 10%;
                }
                /* Popust */
                .table th:nth-child(5), .table td:nth-child(5) {
                    width: 15%;
                }
                /* Način plaćanja */
                .table th:nth-child(6), .table td:nth-child(6) {
                    width: 26%;
                    text-align: center;
                }
        /* Akcije */

        .table-hover tbody tr:hover td {
            background-color: #f0f9ff !important;
            transition: background-color 0.3s ease;
        }

        .btn-group {
            display: flex;
            gap: 6px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn-edit {
            background-color: #3b82f6;
            color: #fff;
            border-radius: 12px;
        }

            .btn-edit:hover {
                background-color: #2563eb;
            }

        .btn-details {
            background-color: #0ea5e9;
            color: #fff;
            border-radius: 12px;
        }

            .btn-details:hover {
                background-color: #0284c7;
            }

        .btn-delete {
            background-color: #ef4444;
            color: #fff;
            border-radius: 12px;
        }

            .btn-delete:hover {
                background-color: #dc2626;
            }

        .page-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            margin: 30px auto 10px;
            width: 95%;
        }

            .page-title h1 {
                font-size: 2rem;
                font-weight: 800;
                color: #1e3a8a;
            }

            .page-title .btn-primary {
                background-color: #2563eb;
                border: none;
                border-radius: 8px;
                font-weight: 600;
                padding: 10px 20px;
            }

                .page-title .btn-primary:hover {
                    background-color: #1d4ed8;
                }
    </style>
}

<div class="page-title">
    <h1><i class="bi bi-credit-card me-2"></i> Plaćanje</h1>
    <a asp-action="Create" class="btn btn-primary">+ Kreiraj novo</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card-custom">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Korisnik</th>
                    <th>Datum plaćanja</th>
                    <th>Iznos</th>
                    <th>Popust</th>
                    <th>Način plaćanja</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Korisnik != null)
                            {
                                <strong>@item.Korisnik.Ime @item.Korisnik.Prezime</strong>
                            }
                            else
                            {
                                <span class="text-danger">Nepoznat</span>
                            }
                        </td>
                        <td>@item.DatumPlacanja.ToString("dd/MM/yyyy")</td>
                        <td>@item.Iznos.ToString("F2")</td>
                        <td>@(item.PopustPrimijenjen ? "Da" : "Ne")</td>
                        <td>@item.NacinPlacanja</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.IdPlacanja" class="btn btn-edit">Uredi</a>
                                <a asp-action="Details" asp-route-id="@item.IdPlacanja" class="btn btn-details">Detalji</a>
                                <a asp-action="Delete" asp-route-id="@item.IdPlacanja" class="btn btn-delete">Obriši</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>