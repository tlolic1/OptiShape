@model OptiShape.Models.Termin

@{
    ViewData["Title"] = "Detalji termina";
}

@section Styles {
    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', sans-serif;
        }

        .details-container {
            background-color: #ffffff;
            padding: 30px;
            margin: 40px auto;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            max-width: 600px;
        }

        h2 {
            color: #1e3a8a;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .details-row {
            display: flex;
            margin-bottom: 15px;
        }

        .details-label {
            width: 40%;
            font-weight: 600;
            color: #334155;
        }

        .details-value {
            width: 60%;
            color: #1e293b;
        }

            .details-value.korisnik {
                font-weight: 700;
            }

        .btn-group {
            margin-top: 30px;
        }

        .btn-primary, .btn-secondary {
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 10px 18px;
            margin-right: 10px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background-color: #2563eb;
            color: #ffffff;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: #e2e8f0;
            color: #1e293b;
        }

            .btn-secondary:hover {
                background-color: #cbd5e1;
            }
    </style>
}

<div class="details-container">
    <h2>Detalji termina</h2>

    <div class="details-row">
        <div class="details-label">Korisnik:</div>
        <div class="details-value korisnik">
            @if (Model.Korisnik != null)
            {
                @(Model.Korisnik.Ime + " " + Model.Korisnik.Prezime)
            }
            else
            {
                <span class="text-danger">Korisnik nije pronađen</span>
            }
        </div>
    </div>

    <div class="details-row">
        <div class="details-label">Datum i vrijeme:</div>
        <div class="details-value">@Model.Datum.ToString("dd.MM.yyyy HH:mm")</div>
    </div>

    <div class="details-row">
        <div class="details-label">Vrijeme završetka:</div>
        <div class="details-value">@Model.Datum.AddHours(1).ToString("HH:mm")</div>
    </div>


    <div class="btn-group">
        @if (User.IsInRole("Administrator") || User.IsInRole("Trener"))
        {
            <a asp-action="Edit" asp-route-id="@Model.IdTermina" class="btn btn-primary">Uredi</a>
        }
        <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
    </div>
</div>