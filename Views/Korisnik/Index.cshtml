@model IEnumerable<OptiShape.Models.Korisnik>

@{
    ViewData["Title"] = "Korisnici";
}

@section Styles {
    <style>
        .card-custom {
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            background-color: #ffffff;
            padding: 22px;
            margin: 20px auto;
            width: 95%;
            overflow-x: auto;
        }

        .table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            overflow: hidden;
        }

            .table th {
                background-color: #e0f2fe;
                color: #1e3a8a;
                font-weight: 700;
                padding: 8px 12px;
                text-align: left;
                font-size: 0.9rem;
                line-height: 1.2;
            }

            .table td {
                background-color: #f9fafb;
                padding: 6px 12px;
                border-top: 1px solid #e2e8f0;
                vertical-align: middle;
                font-size: 0.9rem;
                line-height: 1.2;
            }

        .table-hover tbody tr:hover td {
            background-color: #f0f9ff !important;
            transition: background-color 0.3s ease;
        }

        .btn-group {
            display: flex;
            gap: 4px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn-edit {
            background-color: #3b82f6;
            color: #fff;
            border-radius: 8px;
            font-size: 0.85rem;
            padding: 4px 8px;
        }

            .btn-edit:hover {
                background-color: #2563eb;
            }

        .btn-details {
            background-color: #0ea5e9;
            color: #fff;
            border-radius: 8px;
            font-size: 0.85rem;
            padding: 4px 8px;
        }

            .btn-details:hover {
                background-color: #0284c7;
            }

        .btn-delete {
            background-color: #ef4444;
            color: #fff;
            border-radius: 8px;
            font-size: 0.85rem;
            padding: 4px 8px;
        }

            .btn-delete:hover {
                background-color: #dc2626;
            }

        .page-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            margin: 25px auto 10px;
            width: 95%;
        }

            .page-title h1 {
                font-size: 2rem;
                font-weight: 800;
                color: #1e3a8a;
            }

            .page-title .btn-primary {
                background-color: #2563eb;
                border: none;
                border-radius: 8px;
                font-weight: 600;
                padding: 10px 20px;
            }

                .page-title .btn-primary:hover {
                    background-color: #1d4ed8;
                }
    </style>
}

<div class="page-title">
    <h1><i class="bi bi-people me-2"></i> Korisnici</h1>
    <a asp-action="Create" class="btn btn-primary">+ Dodaj korisnika</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card-custom">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Ime i prezime</th>
                    <th>Email</th>
                    <th>Datum rođenja</th>
                    <th>Visina (cm)</th>
                    <th>Težina (kg)</th>
                    <th>Spol</th>
                    <th>Cilj</th>
                    <th>Studentski status</th>
                    <th>Telefon</th>
                    <th>Akcije</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Ime @item.Prezime</strong></td>
                        <td>@item.Email</td>
                        <td>@item.DatumRodjenja.ToString("dd/MM/yyyy")</td>
                        <td>@item.Visina</td>
                        <td>@item.Tezina</td>
                        <td>@item.Spol</td>
                        <td>@item.Cilj</td>
                        <td>@(item.StudentskiStatus ? "Da" : "Ne")</td>
                        <td>@item.BrojTelefona</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.IdKorisnika" class="btn btn-edit">Uredi</a>
                                <a asp-action="Details" asp-route-id="@item.IdKorisnika" class="btn btn-details">Detalji</a>
                                <a asp-action="Delete" asp-route-id="@item.IdKorisnika" class="btn btn-delete">Obriši</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>