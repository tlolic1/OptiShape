@model OptiShape.Models.Korisnik

@{
    ViewData["Title"] = "Uredi korisnika";
}

@section Styles {
    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', sans-serif;
        }

        .edit-container {
            background-color: #ffffff;
            padding: 30px;
            margin: 40px auto;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            max-width: 700px;
        }

        h2 {
            color: #1e3a8a;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600;
            color: #334155;
            display: block;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #cbd5e1;
            border-radius: 8px;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25);
                outline: none;
            }

        .btn-group {
            margin-top: 30px;
            display: flex;
            gap: 10px;
        }

        .btn-primary, .btn-secondary {
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 12px 20px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background-color: #2563eb;
            color: #ffffff;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: #e2e8f0;
            color: #1e293b;
        }

            .btn-secondary:hover {
                background-color: #cbd5e1;
            }

        .text-danger {
            color: #dc2626;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }
    </style>
}

<div class="edit-container">
    <h2>Uredi korisnika</h2>

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdKorisnika" />

        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="Ime" class="form-label">Ime</label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Prezime" class="form-label">Prezime</label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="BrojTelefona" class="form-label">Broj telefona</label>
                <input asp-for="BrojTelefona" class="form-control" />
                <span asp-validation-for="BrojTelefona" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="DatumRodjenja" class="form-label">Datum rođenja</label>
                <input asp-for="DatumRodjenja" class="form-control" type="date" />
                <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="Visina" class="form-label">Visina (cm)</label>
                <input asp-for="Visina" class="form-control" />
                <span asp-validation-for="Visina" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Tezina" class="form-label">Težina (kg)</label>
                <input asp-for="Tezina" class="form-control" />
                <span asp-validation-for="Tezina" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <label asp-for="Spol" class="form-label">Spol</label>
                <select asp-for="Spol" class="form-control" asp-items="Html.GetEnumSelectList<OptiShape.Models.Spol>()"></select>
                <span asp-validation-for="Spol" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                <label asp-for="Cilj" class="form-label">Cilj</label>
                <select asp-for="Cilj" class="form-control" asp-items="Html.GetEnumSelectList<OptiShape.Models.Cilj>()"></select>
                <span asp-validation-for="Cilj" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="StudentskiStatus" class="form-label">Studentski status</label>
            <div class="form-check">
                <input asp-for="StudentskiStatus" class="form-check-input" />
                <label class="form-check-label" for="StudentskiStatus">Da li korisnik ima studentski status?</label>
            </div>
            <span asp-validation-for="StudentskiStatus" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdTrenera" class="form-label">Trener</label>
            <select asp-for="IdTrenera" class="form-control" asp-items="ViewBag.IdTrenera">
                <option value="">-- Odaberite trenera --</option>
            </select>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Spremi</button>
            <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}