@using Microsoft.AspNetCore.Identity
@using OptiShape.Models
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html> 

<html lang="en">  
<head>  

    <meta charset="utf-8" />  
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    <title>@ViewData["Title"] - OptiShape</title>  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />  
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />  
    <link rel="stylesheet" href="~/OptiShape.styles.css" asp-append-version="true" />  


    <!-- Font Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">


    <!-- ANIMACIJE -->
    <style>
        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            margin: 0;
            padding: 0;
            color: #1e293b;
        }

        h1, h2 {
            color: #1e3a8a;
        }

        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 1.5s ease forwards;
        }

        @@keyframes fadeInUp {
            to

        {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .btn-primary {
            background-color: #2563eb;
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            display: inline-block;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
                transform: scale(1.05);
            }


            /* za nav*/
        .custom-navbar,
        .custom-navbar-alt {
            background-color: white;
            border-bottom: 1px solid #e5e7eb;
            padding: 18px 30px;
            font-family: 'Inter', sans-serif;
            z-index: 1030;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 800;
            color: #2563eb !important;
            letter-spacing: -0.5px;
            transition: transform 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1e293b;
            padding: 10px 14px;
            border-radius: 6px;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #eff6ff;
                color: #2563eb;
                transform: translateY(-1px);
            }

        .navbar-nav.gap-2 > li,
        .navbar-nav.gap-4 > li {
            margin-left: 0.4rem;
            margin-right: 0.4rem;
        }

        .navbar-nav li {
            margin-left: 0.5rem;
            margin-right: 0.5rem;
        }


        /* ZA LOGO */

        .logo-hover {
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }

            .logo-hover:hover {
                transform: scale(1.08);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            }
    </style>

    @RenderSection("Styles", required: false)
</head>  

<body>  
   
    <header> <!-- NAVBAR -->
        <nav class="navbar navbar-expand-sm @(ViewData["FixedNavbar"] as bool? == true ? "fixed-top custom-navbar shadow-sm" : "custom-navbar-alt")">
            <div class="container-fluid">
                @if (!SignInManager.IsSignedIn(User))
                {
                    <!-- centrirani logo za neulogovane --> 
                    <div class="mx-auto">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo.png" alt="OptiShape" class="logo-hover" style="height: 48px;" />

                        </a>
                    </div>
                }
                else
                {
                    <!-- klasicni tekstualni logo za ulogovane -->
                    <a class="navbar-brand" asp-controller="Home" asp-action="@(SignInManager.IsSignedIn(User) ? "Dashboard" : "Index")">
                        <img src="~/images/logo.png" alt="OptiShape" class="logo-hover" style="height: 48px;" />
                    </a>

                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">

                        @if (!SignInManager.IsSignedIn(User)) /* UKOLIKO NIJE SIGN INOVAN */
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/#opis">O aplikaciji</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/#benefiti">Kako započeti</a>
                            </li>
                        }

                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Administrator")) /* REKSTRIKCIJA NA KORISNICI (SAMO ZA ADMINA) */
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Korisnik" asp-action="Index">Korisnici</a>
                            </li> // samo za admina
                        }

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PlanIshraneITreninga" asp-action="Index">
                                    @(User.IsInRole("Korisnik") ? "Moj plan ishrane" : "Planovi ishrane")
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="StatistikeNapretka" asp-action="Index">Statistike napretka</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Termin" asp-action="Index">Termini</a>
                            </li>
                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Placanje" asp-action="Index">Plaćanje</a>
                                </li>
                            }
                        }


                    </ul>

                    <ul class="navbar-nav gap-2">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    @{
        var isFixed = ViewData["FixedNavbar"] as bool? == true;

        // Po defaultu fiksiran navbar traži padding
        var mainStyle = isFixed ? "padding-top: 80px;" : "";

        // Ali ne dodaj padding ako korisnik nije logovan (npr. početna stranica ima centrirani logo)
        if (!SignInManager.IsSignedIn(User))
        {
            mainStyle = "";
        }
    }


    <main style="@mainStyle" role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">  
        <div class="container">  
            &copy; 2025 - OptiShape  
        </div>  
    </footer>  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>  
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  
    <script src="~/js/site.js" asp-append-version="true"></script>  
    @await RenderSectionAsync("Scripts", required: false)  

</body>  
</html>