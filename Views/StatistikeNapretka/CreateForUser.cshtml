@model OptiShape.Models.StatistikeNapretka

@{
    ViewData["Title"] = "Dodaj statistiku napretka";
}

@section Styles {
    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', sans-serif;
        }

        .create-container {
            background-color: #ffffff;
            padding: 30px;
            margin: 40px auto;
            border-radius: 16px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            max-width: 600px;
        }

        h2 {
            color: #1e3a8a;
            font-weight: 700;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
            color: #334155;
            display: block;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #cbd5e1;
            border-radius: 10px;
            font-size: 1rem;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        /* Remove spinner arrows from number input */
        input[type="number"]::-webkit-inner-spin-button,
        input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type="number"] {
            -moz-appearance: textfield;
        }

        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25);
            outline: none;
        }

        .info-text {
            font-size: 0.9rem;
            color: #64748b;
            margin-top: 6px;
        }

        .btn-group {
            margin-top: 30px;
            display: flex;
            gap: 10px;
        }

        .btn-primary, .btn-secondary {
            border: none;
            border-radius: 10px;
            font-weight: 600;
            padding: 12px 20px;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: #2563eb;
            color: #ffffff;
            flex: 2;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
            }

        .btn-secondary {
            background-color: #e2e8f0;
            color: #1e293b;
            flex: 1;
        }

            .btn-secondary:hover {
                background-color: #cbd5e1;
            }

        .text-danger {
            color: #dc2626;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        .field-validation-error {
            color: #dc2626;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }
    </style>
}

<div class="create-container">
    <h2>Unesi statistiku napretka</h2>

    <form asp-action="CreateForUser" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Datum" class="form-label">Datum unosa</label>
            <input asp-for="Datum" class="form-control" type="date" />
            <span asp-validation-for="Datum" class="text-danger"></span>
            <div class="info-text">Unesite datum za koji želite zabilježiti statistiku</div>
        </div>

        <div class="form-group">
            <label asp-for="Tezina" class="form-label">Težina (kg)</label>
            <input asp-for="Tezina" class="form-control" type="number" step="0.1" min="30" max="200" value="" />
            <span asp-validation-for="Tezina" class="text-danger"></span>
            <div class="info-text">Na osnovu težine i vaše visine automatski ćemo izračunati BMI i preporučeni kalorijski unos</div>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Spremi statistiku</button>
            <a asp-action="Index" class="btn btn-secondary">Odustani</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Prevođenje validacijskih poruka na bosanski jezik
        $(document).ready(function () {
            // Lokalizirane poruke validacije
            $.extend($.validator.messages, {
                required: "Ovo polje je obavezno.",
                number: "Unesite ispravan broj.",
                date: "Unesite ispravan datum.",
                min: "Unesite vrijednost veću ili jednaku {0}.",
                max: "Unesite vrijednost manju ili jednaku {0}.",
                step: "Unesite vrijednost koja je višekratnik broja {0}.",
                email: "Unesite ispravnu email adresu.",
                dateISO: "Unesite ispravan datum."
            });

            // Posebno prilagođavanje poruka za težinu
            $("#Tezina").data("msg-min", "Težina mora biti najmanje 30 kg.");
            $("#Tezina").data("msg-max", "Težina ne može biti veća od 200 kg.");

            // Posebno prilagođavanje poruke za datum
            $("#Datum").data("msg-date", "Unesite ispravan datum.");
            $("#Datum").data("msg-required", "Datum je obavezan.");

            // Ponovno pokretanje validacije nakon izmjene poruka
            $("form").validate().settings.messages = $.extend(true, $("form").validate().settings.messages, {
                Tezina: {
                    min: "Težina mora biti najmanje 30 kg.",
                    max: "Težina ne može biti veća od 200 kg."
                },
                Datum: {
                    required: "Datum je obavezan.",
                    date: "Unesite ispravan datum."
                }
            });
        });
    </script>
}